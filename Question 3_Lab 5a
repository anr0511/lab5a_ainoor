<?php
// Function untuk kira area 
function calculateArea($width, $height) {
    return $width * $height;
}

// value untuk width dan height
$width = 4;
$height = 2;

// panggil function and kira area
$area = calculateArea($width, $height);
?>

<!DOCTYPE html>
<html>
<head>
    <title>Calculation of Area</title>
    <style>
        p{
            font-weight :bold;
        }
    </style>
</head>
<body>
    <p>
        <?php
        echo "The area of a rectangle with a width of $width and $height is $area";
        ?>
    </p>
</body>
</html>


